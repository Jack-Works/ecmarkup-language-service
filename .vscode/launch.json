{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Client",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}/extension-vscode/"],
            "outFiles": ["${workspaceRoot}/extension-vscode/lib/**/*.js"],
            "sourceMaps": true,
            "preLaunchTask": {
                "type": "npm",
                "script": "watch"
            },
            "env": {
                "VSCODE_TEXTMATE_DEBUG": "1"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Server",
            "port": 29384,
            "restart": true,
            "outFiles": ["${workspaceRoot}/language-service/lib/**/*.js"],
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
            "name": "Client + Server",
            "configurations": ["Launch Client", "Attach to Server"]
        }
    ]
}
