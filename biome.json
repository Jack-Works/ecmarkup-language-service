{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "files": {
        "includes": ["**/src/**/*.ts", "**/tests/**/*.ts"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120,
        "attributePosition": "auto"
    },
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": { "useTemplate": "off", "noUselessElse": "off", "noNonNullAssertion": "off" },
            "complexity": { "useLiteralKeys": "off", "noAdjacentSpacesInRegex": "off" },
            "correctness": { "noUnusedImports": "error" }
        }
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "asNeeded",
            "trailingCommas": "all",
            "semicolons": "asNeeded",
            "arrowParentheses": "always",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "quoteStyle": "single",
            "attributePosition": "auto"
        }
    },
    "overrides": [
        {
            "includes": ["**/ecmarkup.language-configuration.json"],
            "json": { "parser": { "allowComments": true, "allowTrailingCommas": true } }
        }
    ]
}
