{
    "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120,
        "attributePosition": "auto"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": { "useTemplate": "off", "noUselessElse": "off", "noNonNullAssertion": "off" },
            "complexity": { "useLiteralKeys": "off" },
            "correctness": { "noUnusedImports": "error" }
        }
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "asNeeded",
            "semicolons": "asNeeded",
            "arrowParentheses": "always",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "quoteStyle": "single",
            "attributePosition": "auto"
        }
    }
}
